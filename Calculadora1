programa {
  funcao inicio() {
     inteiro A, B, soma, sub, mult, div 
   
    
    escreva ("Bem vindo a calculadora, aqui você verá o resultado de todas as operações basicas! Basta escrever dois números para serem calculados! \n\nDigite o primeiro: ")
    leia (A)
    escreva ("\nEscreva o segundo número para ser calculado: ")
    leia (B)
    
    soma = (A + B)
    sub = (A - B)
    mult = (A * B)
    div = (A / B)
    
    escreva ("\nO resultado da soma desses numeros é: ", soma)
    escreva ("\nO resultado da subtração desses numeros é: ", sub)
    escreva ("\nO resultado da multiplicação desses numeros é: ", mult)
    escreva ("\nO resultado da divisão desses numeros é: ", div)
    escreva("\n")
    


  }
}
